%header{ class: "navigation#{add_visible_class(current_page.path)}",
  role: "banner" }
  .navigation-wrapper
    = link_to home_smart_path(current_page.path),
      class: "logo home-back-to-top" do
      = inline_svg "logo-mini.svg", class: "svg-logo"
    %a.navigation-menu-button#js-mobile-menu{ href: "javascript:void(0)" }
      %i.fa.fa-bars
    %nav{ role: "navigation" }
      %ul.navigation-menu.show#js-navigation-menu
        = partial "nav-links"
