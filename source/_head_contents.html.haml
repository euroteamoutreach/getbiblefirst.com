= tag "meta", charset: "utf-8"
= tag "meta", content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"
= tag "meta", content: "width=device-width, initial-scale=1.0", name: "viewport"
= tag "meta", name: "author", content: "Euro Team Outreach, Inc."
= tag "meta", name: "robots", content: smart_robots(current_page.path, config[:environment].to_s)
= tag "meta", name: "description", content: data.site.description

= tag "meta", property: "og:url", content: data.site.url
= tag "meta", property: "og:title", content: data.site.title
= tag "meta", property: "og:description", content: data.site.description
= tag "meta", property: "og:image",
content: "http://d3lyzr3q25n7t0.cloudfront.net/biblefirst-fb.png"

%title= full_title(current_page.data.title)

= partial "analytics" if production?
= favicon_tag "images/favicon.png"
= tag "link", href: "images/apple-touch-icon.png", rel: "apple-touch-icon"
= stylesheet_link_tag :site
= javascript_include_tag "https://use.fontawesome.com/6f6b41ef5e.js"
